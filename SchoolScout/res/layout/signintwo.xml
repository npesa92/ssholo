<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dip">
    
    
    
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:visibility="visible" 
        />
    
    
    
    <TextView
        android:id="@+id/sign_in_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_status" />

    <EditText
        android:id="@+id/userfield2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:inputType="text"
        android:hint="username" />
    
    <EditText
        android:id="@+id/passfield2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:inputType="textPassword"
        android:hint="password" />

    <Button
        android:id="@+id/schsignin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign-in to SchoolScout Account"
        android:layout_marginTop="10dp" />
    
    <Button 
        android:id="@+id/createaccount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create SchoolScout Account"
        android:layout_marginTop="10dp" />
    
    <FrameLayout 
        android:id="@+id/createcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    

</LinearLayout>
</ScrollView>